LightmappedGeneric
{
	$basetexture "woowz_map/cavediver_dream/water"
	$bottommaterial "woowz_map/cavediver_dream/water"
	$bumpmap "woowz_map/cavediver_dream/water_n"
	$normalmap "woowz_map/cavediver_dream/water_n"
	$refracttexture "_rt_WaterRefraction"
	$reflecttexture "_rt_WaterReflection"
	
	%compilewater 1
	$surfaceprop "water"
	$abovewater 1
	
	$scale "[0.2 0.2]"
	$translucent "1"

	$fogenable 1
	$fogcolor "{0 0 0}"
	$fogstart 0
	$fogend 100

	$texoffset "[0 0]"
	$texscale "1.5"

	Proxies
	{
		TextureScroll
		{
			texturescrollvar "$texoffset"
			texturescrollrate 0.005
			texturescrollangle 3
		}

		TextureTransform
		{
			translateVar "$texoffset"
			scaleVar "$texscale"
			resultVar "$basetexturetransform"
		}
	}
}
